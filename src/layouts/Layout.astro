---
import MaskHeader from "@components/header/headerMask.astro";
import BackTo from "@components/backTo.astro";
import Tab from "@components/tab.astro";
import "../styles/main.css";
interface Props {
  title?: string;
}
const { title } = Astro.props;
---

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="/favicon.png" />
  </head>
  <body id="pageLayout" class="themeBase">
    <MaskHeader />
    <main class="relative grid grid-cols-[1fr_min(65ch,90%)_1fr]">
      <article class="min-h-screen relative col-start-2 col-end-3">
        <div class="mt-20 mb-20 lg:mt-25 lg:mb-20 w-full">
          <div
            class:list={[
              {
                hidden: !["posts", "projects"].includes(
                  Astro.url.pathname.replace(/\//g, "")
                ),
              },
            ]}
          >
            <BackTo backTo="" />
            <Tab />
          </div>
          <slot />
        </div>
      </article>
    </main>
  </body>
</html>

<style is:global>
  body {
    background-image: url("/Noise.png");
    background-size: 40%;
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: -10;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
  }
</style>
