---
import { allPosts } from "./_postsCollection";
const postsListLight = allPosts.flat().slice(0, 3);
---

<main class="space-y-4">
  <a
    href="/posts"
    class="flex items-center gap-2 decoration-none border-none cursor-pointer hover:opacity-70 w-32 transition-all duration-300 group"
  >
    <p id="blockTitle" class="group-hover:shimmerText">Posts</p>
    <div class="i-ph-arrow-up-right transition-transform duration-300 group-hover:translate-x-1 group-hover:-translate-y-1"></div>
  </a>
  
  <div class="not-prose grid grid-cols-1 md:grid-cols-2 gap-4">
    {
      postsListLight.map((posts, index) => {
        return (
          <>
            <div class={`glassCard p-4 flex flex-col gap-3 group hover:scale-102 transition-all duration-300 animate-delay-${(index + 1) * 100}`}>
              <div class="absolute inset-0 bg-gradient-to-br from-sage-100/10 to-sage-200/5 rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              
              <a
                href={`/posts/${posts.slug}`}
                class="relative z-10 decoration-none min-w-max font-bold italic w-min border-b border-sage-200 dark:border-sage-300 hover:border-sage-400 dark:hover:border-sage-100 transition-all duration-300 hover:shimmerText"
              >
                {posts.data.title}
              </a>
              
              <p class="relative z-10 text-sm text-sage-400/70 dark:text-sage-200/70 leading-relaxed">
                {posts.data.description}
              </p>
              
              <div class="absolute bottom-0 left-0 w-full h-0.5 bg-gradient-to-r from-transparent via-sage-300/30 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            </div>
          </>
        );
      })
    }
  </div>
</main>
