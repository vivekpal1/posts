---
import Layout from '@layouts/Layout.astro'
import { PrivyProvider } from '../../components/auth/PrivyProvider'
import { PaymentGate } from '../../components/payment/PaymentGate'
import { getCollection } from 'astro:content'

// Get all wiki content
const freeWiki = await getCollection('wiki-free')
const premiumWiki = await getCollection('wiki-premium')

// Group by location and category
const groupedFree = freeWiki.reduce((acc, entry) => {
  const { location, category } = entry.data
  if (!acc[location]) acc[location] = {}
  if (!acc[location][category]) acc[location][category] = []
  acc[location][category].push(entry)
  return acc
}, {} as Record<string, Record<string, any[]>>)

const groupedPremium = premiumWiki.reduce((acc, entry) => {
  const { location, category } = entry.data
  if (!acc[location]) acc[location] = {}
  if (!acc[location][category]) acc[location][category] = []
  acc[location][category].push(entry)
  return acc
}, {} as Record<string, Record<string, any[]>>)

const privyAppId = import.meta.env.PUBLIC_PRIVY_APP_ID;
const isPrivyConfigured = privyAppId && privyAppId !== 'your_privy_app_id_here';
---

<Layout title="Digital Nomad's Wiki">
  <main class="max-w-6xl mx-auto px-4 py-8">
    <!-- Header -->
    <section class="text-center mb-12">
      <h1 class="text-5xl font-bold mb-4 bg-gradient-to-r from-purple-600 to-blue-600 bg-clip-text text-transparent">
        🌍 Digital Nomad's Wiki
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 mb-6 max-w-3xl mx-auto">
        Your comprehensive guide to the best spots across Southeast Asia and beyond. 
        Curated by a fellow nomad, powered by Solana blockchain.
      </p>
      <div class="flex justify-center gap-4 mb-8">
        <div class="bg-green-100 dark:bg-green-900/20 text-green-800 dark:text-green-200 px-4 py-2 rounded-lg">
          ✅ Real Solana Payments
        </div>
        <div class="bg-blue-100 dark:bg-blue-900/20 text-blue-800 dark:text-blue-200 px-4 py-2 rounded-lg">
          🔐 Lifetime Access
        </div>
        <div class="bg-purple-100 dark:bg-purple-900/20 text-purple-800 dark:text-purple-200 px-4 py-2 rounded-lg">
          🚀 Powered by Privy
        </div>
      </div>
    </section>

    <!-- Free Content Section -->
    <section class="mb-16">
      <div class="text-center mb-8">
        <h2 class="text-3xl font-bold mb-4">🆓 Free Guides</h2>
        <p class="text-gray-600 dark:text-gray-400">Get started with these free location guides</p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {Object.entries(groupedFree).map(([location, categories]) => (
          <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden hover:shadow-lg transition-all duration-300 hover:scale-105">
            <div class="bg-gradient-to-r from-green-50 to-emerald-50 dark:from-green-900/20 dark:to-emerald-900/20 px-4 py-3 border-b">
              <h3 class="font-semibold capitalize flex items-center text-green-800 dark:text-green-200">
                <span class="mr-2 text-xl">
                  {location === 'danang' ? '🇻🇳' : 
                   location === 'saigon' ? '🏙️' : 
                   location === 'thailand' ? '🇹🇭' : '📍'}
                </span>
                {location.replace('-', ' ')}
              </h3>
            </div>
            <div class="p-4">
              {Object.entries(categories).map(([category, entries]) => (
                <div class="mb-4 last:mb-0">
                  <h4 class="font-medium text-sm text-gray-700 dark:text-gray-300 mb-2 flex items-center">
                    <span class="mr-1">
                      {category === 'cafe' ? '☕' :
                       category === 'coworking' ? '💼' :
                       category === 'food' ? '🍜' : '📋'}
                    </span>
                    {category === 'cafe' ? 'Cafes' :
                     category === 'coworking' ? 'Coworking' :
                     category === 'food' ? 'Food' : category}
                  </h4>
                  {entries.map((entry) => (
                    <a 
                      href={`/wiki/free/${entry.slug}`}
                      class="block text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 text-sm mb-1 hover:underline transition-colors"
                    >
                      {entry.data.title}
                    </a>
                  ))}
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Premium Content Section -->
    <section class="mb-12">
      <div class="text-center mb-8">
        <h2 class="text-3xl font-bold mb-4">⭐ Premium Guides</h2>
        <p class="text-gray-600 dark:text-gray-400">Unlock exclusive content with detailed insider information</p>
      </div>
      
      <!-- Payment Interface -->
      <div class="mb-12">
        <PaymentGate client:load>
          <!-- Content shown after successful payment -->
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {Object.entries(groupedPremium).map(([location, categories]) => (
              <div class="bg-white dark:bg-gray-800 border border-yellow-200 dark:border-yellow-700 rounded-lg overflow-hidden hover:shadow-lg transition-all duration-300 hover:scale-105">
                <div class="bg-gradient-to-r from-yellow-50 to-amber-50 dark:from-yellow-900/20 dark:to-amber-900/20 px-4 py-3 border-b border-yellow-200 dark:border-yellow-700">
                  <h3 class="font-semibold capitalize flex items-center text-yellow-800 dark:text-yellow-200">
                    <span class="mr-2 text-xl">⭐</span>
                    {location.replace('-', ' ')} Premium
                  </h3>
                </div>
                <div class="p-4">
                  {Object.entries(categories).map(([category, entries]) => (
                    <div class="mb-4 last:mb-0">
                      <h4 class="font-medium text-sm text-gray-700 dark:text-gray-300 mb-2 flex items-center">
                        <span class="mr-1">
                          {category === 'cafe' ? '☕' :
                           category === 'coworking' ? '💼' :
                           category === 'food' ? '🍜' : '📋'}
                        </span>
                        {category === 'cafe' ? 'Hidden Cafes' :
                         category === 'coworking' ? 'Exclusive Spaces' :
                         category === 'food' ? 'Secret Spots' : category}
                      </h4>
                      {entries.map((entry) => (
                        <a 
                          href={`/wiki/premium/${entry.slug}`}
                          class="block text-yellow-600 dark:text-yellow-400 hover:text-yellow-800 dark:hover:text-yellow-300 text-sm mb-1 font-medium hover:underline transition-colors"
                        >
                          🔓 {entry.data.title}
                        </a>
                      ))}
                    </div>
                  ))}
                </div>
              </div>
            ))}
          </div>
        </PaymentGate>
      </div>
    </section>

    <!-- Features Section -->
    <section class="text-center mb-12">
      <h2 class="text-2xl font-bold mb-8">What You Get With Premium Access</h2>
      <div class="grid md:grid-cols-4 gap-6">
        <div class="bg-blue-50 dark:bg-blue-900/20 rounded-lg p-6 hover:shadow-md transition-shadow">
          <div class="text-3xl mb-3">📍</div>
          <h3 class="font-semibold mb-2">Exact Locations</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">GPS coordinates, exact addresses, and detailed directions</p>
        </div>
        <div class="bg-green-50 dark:bg-green-900/20 rounded-lg p-6 hover:shadow-md transition-shadow">
          <div class="text-3xl mb-3">🤝</div>
          <h3 class="font-semibold mb-2">Insider Tips</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">Contact info, best times to visit, local hacks</p>
        </div>
        <div class="bg-purple-50 dark:bg-purple-900/20 rounded-lg p-6 hover:shadow-md transition-shadow">
          <div class="text-3xl mb-3">🔄</div>
          <h3 class="font-semibold mb-2">Regular Updates</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">New locations added monthly, real-time updates</p>
        </div>
        <div class="bg-yellow-50 dark:bg-yellow-900/20 rounded-lg p-6 hover:shadow-md transition-shadow">
          <div class="text-3xl mb-3">⚡</div>
          <h3 class="font-semibold mb-2">Instant Access</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">Pay once with SOL, access forever</p>
        </div>
      </div>
    </section>

    <!-- Tech Stack Info -->
    <section class="bg-gray-50 dark:bg-gray-800 rounded-lg p-6 text-center">
      <h3 class="text-lg font-semibold mb-2">🔐 Powered by Blockchain Technology</h3>
      <p class="text-gray-600 dark:text-gray-400 text-sm mb-4">
        Secure payments via Solana blockchain • Wallet integration by Privy • Decentralized access control
      </p>
      <div class="flex justify-center gap-4">
        <span class="bg-purple-100 dark:bg-purple-900/20 text-purple-800 dark:text-purple-200 px-3 py-1 rounded text-sm">Solana</span>
        <span class="bg-blue-100 dark:bg-blue-900/20 text-blue-800 dark:text-blue-200 px-3 py-1 rounded text-sm">Privy</span>
        <span class="bg-green-100 dark:bg-green-900/20 text-green-800 dark:text-green-200 px-3 py-1 rounded text-sm">Web3</span>
      </div>
    </section>
  </main>
</Layout>